<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder"/>
            <corners android:radius="10dp"/>
            <padding
                android:top="2dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="start"
            android:src="@drawable/ic_location_red" />
    </item>

    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/ic_spn_down"
            android:tint="@color/colorDivider"/>
    </item>
</layer-list>